<div>
  <p class= "flash-message.notice"><%= flash[:notice] %></p>
</div>
<h1>Books</h1>

<table>
  <thread>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
    </tr>
  </thread>
  <tbody>
       <% @books.each do |book| %>
    <tr>
       <td><span><%= book.title %></span></td>  
       <td><span><%= book.body %></span></td>
       <td><%= link_to 'show', "/books/#{book.id}" %></td> 
        <td><%= link_to "Edit", edit_book_path(book.id) %></td> 
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you shure?" %></td>
    </tr>
         <% end %>
    </tbody>  
</table>
  



<h2>New book</h2>
